@model IEnumerable<TecnoSphere.Models.ContactUs>
@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Contact Messages</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active">Contact</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div  class="card-header">
                        <h5 class="text-center">User Contact Messages</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover table-bordered">
                            <tr>
                                <th>Email</th>
                                <th>Name</th>
                                <th>Phone</th>
                                <th>Project Type</th>
                                <th>Message</th>
                                <th>Service Take </th>
                                <th>Message Date</th>
                                <th>Action</th>
                            </tr>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.Email</td>
                                <td>@item.Name</td>
                                <td>@item.Phone</td>
                                <td>@item.company</td>
                                <td>@item.Message</td>
                                <td>@item.services.Title</td>
                                <td>@item.MessageDateTime</td>
                                <td>
                                    <a asp-action="ContactReply" asp-route-id="@item.Id" class="btn btn-primary">Replay</a>
                                </td>
                            </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
