<!-- Services -->
<section id="services" class="section-1 odd offers">
    <div class="container">
        <div class="row intro">
            <div class="col-12 col-md-9 align-self-center text-center text-md-left">
                <h2 class="featured text-dark featured2">Our Services</h2>
                <p>We will provide you the best IT services, tailored to your needs, to create the future you want.</p>
            </div>
            <div class="col-12 col-md-3 align-self-end">
                <a href="/services" class="btn mx-auto mr-md-0 ml-md-auto primary-button"><i class="icon-grid"></i>VIEW ALL</a>
            </div>
        </div>
        
                <div class="row justify-content-center text-center items">
                    @{
                        bool first = true;

                    }
                       @foreach (var item in Model.services)
                       {
                      

                            if (first)
                            {
                                 <div class="col-12  col-md-6 col-lg-4 item">
                                                <div class="card featured featured2">
                                                    <i class="@item.Icon"></i>
                                                    <h4>@item.Title</h4>
                                                    <p class="demo-2">@item.Description</p>
                                                    <a href="services/@item.Slug"><i class="btn-icon icon-arrow-right-circle"></i></a>
                                                </div>
                                            </div>
                    
                                first = false;
                            }
                            else
                            {

                                if (Model.services.IndexOf(item) == Model.services.Count - 1)
                                {
                                        <div class="col-12  col-md-6 col-lg-4 item">
                                    <div class="card featured">
                                        <i class="@item.Icon"></i>
                                        <h4>@item.Title</h4>
                                        <p class="demo-2">@item.Description</p>
                                        <a href="services/@item.Slug"><i class="btn-icon icon-arrow-right-circle"></i></a>
                                    </div>
                                        </div>
                                }
                                else
                                {
                                        <div class="col-12  col-md-6 col-lg-4 item">
                                            <div class="card ">
                                                <i class="@item.Icon"></i>
                                                <h4>@item.Title</h4>
                                <p class="demo-2">@item.Description</p>
                                <a href="services/@item.Slug"><i class="btn-icon icon-arrow-right-circle"></i></a>
                                            </div>
                                        </div>

                                }
                                 
                            }
                               
                       }
                </div>

    </div>
</section>

